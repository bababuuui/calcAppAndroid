    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="25dp"
        android:textSize="24sp"
        android:gravity="right|center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/one"
                style="@style/calc_button"
                android:text="1"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/two"
                style="@style/calc_button"
                android:text="2"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/three"
                style="@style/calc_button"
                android:text="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/four"
                style="@style/calc_button"
                android:text="4"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/five"
                style="@style/calc_button"
                android:text="5"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/six"
                style="@style/calc_button"
                android:text="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/seven"
                style="@style/calc_button"
                android:text="7"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/eight"
                style="@style/calc_button"
                android:text="8"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/nine"
                style="@style/calc_button"
                android:text="9"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                style="@style/calc_button"
                android:visibility="invisible"/>


            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/dot"
                style="@style/calc_button"
                android:text="."/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/zero"
                style="@style/calc_button"
                android:text="0"/>


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/plus"
                style="@style/calc_button"
                android:text="+"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/minus"
                style="@style/calc_button"
                android:text="-"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/equals"
                style="@style/calc_button"
                android:text="="/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/multiply"
                style="@style/calc_button"
                android:text="*"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/division"
                style="@style/calc_button"
                android:text="/"/>

            <Button
                android:background="@drawable/button_bkg"
                android:id="@+id/reset"
                style="@style/calc_button"
                android:text="C"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
